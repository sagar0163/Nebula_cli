{
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": {
                "name": "conventionalcommits",
                "types": [
                    {
                        "type": "feat",
                        "section": "Features"
                    },
                    {
                        "type": "fix",
                        "section": "Bug Fixes"
                    },
                    {
                        "type": "security",
                        "section": "üõ°Ô∏è Security"
                    },
                    {
                        "type": "perf",
                        "section": "Performance Improvements"
                    },
                    {
                        "type": "chore",
                        "hidden": true
                    },
                    {
                        "type": "docs",
                        "hidden": true
                    },
                    {
                        "type": "style",
                        "hidden": true
                    },
                    {
                        "type": "refactor",
                        "hidden": true
                    },
                    {
                        "type": "test",
                        "hidden": true
                    }
                ]
            },
            "infile": "CHANGELOG.md",
            "header": "# Nebula-CLI Changelog\n\n"
        }
    },
    "git": {
        "commitMessage": "chore: release v${version}",
        "tagName": "v${version}",
        "requireCleanWorkingDir": true
    },
    "github": {
        "release": true,
        "releaseName": "v${version}"
    },
    "hooks": {
        "before:init": [
            "npm test"
        ],
        "after:release": "echo ‚úÖ Nebula v${version} successfully deployed to the fortress."
    }
}