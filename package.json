{
  "name": "@sagar/nebula-cli",
  "version": "5.2.1",
  "description": "A self-healing terminal agent powered by LLMs (Gemini, Groq, Ollama) that detects failures and auto-suggests fixes.",
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "nebula": "./src/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sagar0163/Nebula_cli.git"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "start": "node src/index.js",
    "prepare": "husky",
    "commit": "cz",
    "type-check": "tsc --noEmit",
    "release": "release-it"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "keywords": [
    "cli",
    "ai",
    "llm",
    "terminal",
    "devops",
    "self-healing",
    "gemini",
    "ollama",
    "groq"
  ],
  "author": "Sagar Jadhav <sagarjadhav063@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^10.0.1",
    "@release-it/conventional-changelog": "^10.0.4",
    "@testing-library/dom": "^10.4.1",
    "@types/node": "^25.0.3",
    "@vitest/ui": "^4.0.18",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "prettier": "^3.8.1",
    "release-it": "^19.2.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "bash-parser": "^0.5.0",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.3",
    "groq-sdk": "^0.37.0",
    "inquirer": "^13.1.0",
    "ollama": "^0.6.3",
    "ora": "^9.0.0"
  }
}
